@using BoardGamesEShop.Client.Models.Miscellaneous

<EditForm Model=Address>
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-field">
        <label>House Number:</label>
        <div>
            <InputText @bind-Value="Address.HouseNumber" />
        </div>
    </div>

    <div class="form-field">
        <label>@(nameof(Address.Ward)):</label>
        <div>
            <InputText @bind-Value="Address.Ward" />
        </div>
    </div>

    <div class="form-field">
        <label>@(nameof(Address.District)):</label>
        <div>
            <InputText @bind-Value="Address.District" />
        </div>
    </div>

    <div class="form-field">
        <label>@(nameof(Address.City)):</label>
        <div>
            <InputText @bind-Value="Address.City" />
        </div>
    </div>

    <div class="form-field">
        <label>Postal code:</label>
        <div>
            <InputText @bind-Value="Address.PostalCode" />
        </div>
    </div>
</EditForm>

@code {
    [Parameter] 
    public required Address Address { get; set; }
}
