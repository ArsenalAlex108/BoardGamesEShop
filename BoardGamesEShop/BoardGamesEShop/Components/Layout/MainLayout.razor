@using BoardGamesEShop.Client.Models.Accounts
@using BoardGamesEShop.Client.Pages.Layout
@using BoardGamesEShop.Client.Services
@inherits PublicLayout


<CascadingValue Value="this">
    <div class="page">
        <div class="sidebar">
            <NavMenu AccountStore="accountStore" />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</CascadingValue>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private Singleton<Account?> accountStore = new(null);

    public override void LoadAccount(Account? account)
    {
        accountStore.Value = account;
    }
} 

